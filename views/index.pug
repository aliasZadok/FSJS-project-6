extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1(style="text-align:center;") Hey, Potential Employers!

      p(style="text-align:center;").lead.text-light
        | Here are some great projects I've built.
    hr
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.imgThumbnail(src=`${project.image_urls[0]}`)
            h5= project.project_name
      
